---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Hours & Location - Southaven Internal Medicine"
  description="Visit Southaven Internal Medicine at 7680 Airways Blvd, Southaven, MS 38671. View our clinic hours, directions, and contact information."
>
  <Header />
  
  <main>
    <Hero 
      title="Hours & Location"
      subtitle="Find us conveniently located in Southaven, MS. We offer flexible hours and same-day appointments to serve our community."
      backgroundImage="https://res.cloudinary.com/dil14r8je/image/upload/v1768323581/auto-site-builder/sitemap-fix-proof/image_9.jpg"
      ctaText="Call (662) 349-1999"
      ctaLink="tel:6623491999"
    />
    
    <!-- Hours Section -->
    <section class="section-padding bg-white">
      <div class="container-custom">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Regular Hours -->
          <div class="animate-section">
            <h2 class="text-3xl font-bold text-slate-800 mb-8">Regular Clinic Hours</h2>
            
            <div class="space-y-4 mb-8">
              <div class="flex justify-between items-center p-4 bg-slate-50 rounded-lg">
                <span class="font-semibold text-slate-800">Monday & Wednesday</span>
                <span class="text-slate-600">7:00 AM - 5:00 PM</span>
              </div>
              <div class="flex justify-between items-center p-4 bg-slate-50 rounded-lg">
                <span class="font-semibold text-slate-800">Tuesday & Thursday</span>
                <span class="text-slate-600">8:00 AM - 5:00 PM</span>
              </div>
              <div class="flex justify-between items-center p-4 bg-slate-50 rounded-lg">
                <span class="font-semibold text-slate-800">Friday</span>
                <span class="text-slate-600">7:00 AM - 11:00 AM</span>
              </div>
            </div>
            
            <div class="bg-teal-50 border-l-4 border-teal-500 p-6 rounded-r-lg">
              <div class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-teal-600 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                  <h4 class="font-semibold text-slate-800 mb-2">Same Day Appointments</h4>
                  <p class="text-slate-600">
                    We have 15 appointments available for same-day access. Call us to check availability.
                  </p>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Holiday Hours -->
          <div class="animate-section">
            <h2 class="text-3xl font-bold text-slate-800 mb-8">Holiday Hours</h2>
            
            <div class="bg-slate-50 rounded-lg p-6 mb-6">
              <h4 class="font-semibold text-slate-800 mb-4 text-lg">Closed on:</h4>
              <ul class="space-y-2 text-slate-600">
                <li class="flex items-center space-x-2">
                  <svg class="w-4 h-4 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                  </svg>
                  <span>Memorial Day</span>
                </li>
                <li class="flex items-center space-x-2">
                  <svg class="w-4 h-4 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                  </svg>
                  <span>July 4th</span>
                </li>
                <li class="flex items-center space-x-2">
                  <svg class="w-4 h-4 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                  </svg>
                  <span>Labor Day</span>
                </li>
                <li class="flex items-center space-x-2">
                  <svg class="w-4 h-4 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                  </svg>
                  <span>Thanksgiving Day</span>
                </li>
                <li class="flex items-center space-x-2">
                  <svg class="w-4 h-4 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                  </svg>
                  <span>Christmas Day</span>
                </li>
                <li class="flex items-center space-x-2">
                  <svg class="w-4 h-4 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                  </svg>
                  <span>New Year's Day</span>
                </li>
              </ul>
            </div>
            
            <div class="bg-teal-50 border-l-4 border-teal-500 p-6 rounded-r-lg">
              <div class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-teal-600 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                  <h4 class="font-semibold text-slate-800 mb-2">Open All Other Holidays</h4>
                  <p class="text-slate-600">
                    We are open on all other holidays to serve our patients' needs.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Location Section -->
    <section class="section-padding bg-slate-50">
      <div class="container-custom">
        <div class="text-center mb-12 animate-section">
          <h2 class="text-3xl md:text-4xl font-bold text-slate-800 mb-6">
            Location & Directions
          </h2>
          <p class="text-xl text-slate-600">
            Our office is located at 7680 Airways Blvd. Southaven, MS 38671
          </p>
        </div>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Map -->
          <div class="animate-section">
            <div class="bg-white rounded-lg shadow-lg p-6">
              <img 
                src="https://res.cloudinary.com/dil14r8je/image/upload/v1768323580/auto-site-builder/sitemap-fix-proof/image_8.jpg" 
                alt="Location Map" 
                class="w-full rounded-lg mb-6"
              />
              <div class="text-center">
                <h4 class="font-semibold text-slate-800 mb-2">Turn in here</h4>
                <p class="text-slate-600">Look for our sign on Airways Boulevard</p>
              </div>
            </div>
          </div>
          
          <!-- Building Photo & Directions -->
          <div class="animate-section">
            <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
              <img 
                src="https://res.cloudinary.com/dil14r8je/image/upload/v1768323581/auto-site-builder/sitemap-fix-proof/image_9.jpg" 
                alt="Office Building" 
                class="w-full rounded-lg mb-6"
              />
              <h4 class="font-semibold text-slate-800 mb-4">Important Note:</h4>
              <p class="text-slate-600 mb-6">
                Our office is located below the children's clinic. Look for the Airways Boulevard 
                entrance and follow the signs to our office.
              </p>
            </div>
            
            <!-- Contact Info -->
            <div class="bg-white rounded-lg shadow-lg p-6">
              <h4 class="font-semibold text-slate-800 mb-4">Contact Information</h4>
              <div class="space-y-4">
                <div class="flex items-center space-x-3">
                  <div class="w-10 h-10 bg-teal-100 rounded-full flex items-center justify-center">
                    <svg class="w-5 h-5 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                  </div>
                  <div>
                    <p class="font-semibold text-slate-800">Phone</p>
                    <a href="tel:6623491999" class="text-teal-600 hover:text-teal-700">(662) 349-1999</a>
                  </div>
                </div>
                
                <div class="flex items-center space-x-3">
                  <div class="w-10 h-10 bg-teal-100 rounded-full flex items-center justify-center">
                    <svg class="w-5 h-5 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4V2a1 1 0 011-1h8a1 1 0 011 1v2m-9 0h10a2 2 0 012 2v10a2 2 0 01-2 2H6a2 2 0 01-2-2V6a2 2 0 012-2z"></path>
                    </svg>
                  </div>
                  <div>
                    <p class="font-semibold text-slate-800">Fax</p>
                    <p class="text-slate-600">(662) 349-9734</p>
                  </div>
                </div>
                
                <div class="flex items-start space-x-3">
                  <div class="w-10 h-10 bg-teal-100 rounded-full flex items-center justify-center">
                    <svg class="w-5 h-5 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                  </div>
                  <div>
                    <p class="font-semibold text-slate-800">Address</p>
                    <p class="text-slate-600">
                      7680 Airways Blvd.<br>
                      Southaven, MS 38671
                    </p>
                  </div>
                </div>
              </div>
              
              <div class="mt-6 pt-6 border-t border-slate-200">
                <a href="tel:6623491999" class="btn-primary w-full text-center">
                  Call Now to Schedule
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>